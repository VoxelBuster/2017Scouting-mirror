<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_team_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.mdillon95.scoutingapp.TeamProfileActivity">

    <TextView
        android:text="@string/missing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/team_name_str"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/missing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team_name_str"
        android:layout_alignParentStart="true"
        android:id="@+id/team_tba_url_2" />

    <TextView
        android:text="@string/missing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team_site"
        android:layout_below="@+id/team_tba_url_2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@color/common_google_signin_btn_text_light_focused"
        android:layout_toEndOf="@+id/team_site"
        android:id="@+id/separator0"
        android:layout_below="@+id/button5"
        android:layout_height="5dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        android:layout_below="@+id/button3"
        android:layout_alignParentEnd="true"
        android:id="@+id/team_robo_image"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="@string/missing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team_robo_name"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_below="@+id/button3"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/team_robo_image"
                android:layout_alignBottom="@+id/team_robo_image" />

            <TextView
                android:text="Drive Train Type: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_robo_name"
                android:layout_alignParentStart="true"
                android:id="@+id/team_robo_dt"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:text="Shooter Type: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team_robo_shooter"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_below="@+id/team_robo_speed"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Pickup Type(s): null"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:id="@+id/team_robo_pickup"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_above="@+id/team_robo_image"
                android:layout_toEndOf="@+id/team_site"
                android:layout_marginStart="0dp" />

            <TextView
                android:text="Gear Pickup: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team_robo_gear_pickup"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_below="@+id/team_robo_hopper"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Can Climb: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team_robo_climb"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_below="@+id/team_robo_gear_pickup"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Hopper Approx. Capacity: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team_robo_hopper"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_below="@+id/team_robo_pickup"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Robot Speed: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_robo_dt"
                android:layout_alignParentStart="true"
                android:id="@+id/team_robo_speed"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:text="Shooter Speed: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/team_robo_shooter_speed"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_below="@+id/team_robo_climb"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Auto Capabilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_robo_shooter_speed"
                android:layout_alignParentStart="true"
                android:id="@+id/textView21"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <TextView
                android:text="Actually Moves: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView21"
                android:layout_alignParentStart="true"
                android:id="@+id/robo_auto_move"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:text="Crosses Base Line: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/robo_auto_baseline"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:text="Attemps Hopper: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/robo_auto_hopper"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_below="@+id/robo_auto_move"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Attemps Gear: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/robo_auto_gear"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_below="@+id/robo_auto_hopper"
                android:layout_alignEnd="@+id/team_robo_shooter" />

            <TextView
                android:text="Shoots Goal: null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/robo_auto_gear"
                android:layout_alignStart="@+id/robo_auto_gear"
                android:id="@+id/robo_auto_goal"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:text="Comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/robo_comments_view" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        android:id="@+id/team_logo"
        android:layout_below="@+id/team_name_str"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <Button
        android:text="Edit Robot"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/separator0"
        android:layout_alignParentStart="true"
        android:onClick="editRobotClick" />

    <Button
        android:text="Add Match"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_below="@id/team_site"
        android:layout_alignParentEnd="true"
        android:onClick="addMatchClick" />

    <Button
        android:text="Edit team"
        android:layout_height="wrap_content"
        android:id="@+id/edit_team_button"
        android:onClick="editTeamClick"
        android:layout_width="165dp"
        android:layout_below="@id/separator0"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:text="Match History"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team_site"
        android:layout_alignParentStart="true"
        android:id="@+id/button4"
        android:onClick="matchHistoryClick" />

</RelativeLayout>
