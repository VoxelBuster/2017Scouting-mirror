<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.mdillon95.scoutingapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirebaseLogin"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TeamsDbActivity"
            android:label="@string/title_activity_teams_db"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TeamEntryEditor"
            android:label="@string/team_entry" />
        <activity
            android:name=".TeamProfileActivity"
            android:label="@string/teams_profile_label" />
        <activity
            android:name=".TeamProfileEditor"
            android:label="Edit Team Entry" />
        <activity
            android:name=".RobotEditor"
            android:label="Edit Robot Entry" />
        <activity
            android:name=".GamePlanActivity"
            android:label="@string/title_activity_game_plan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MatchActivity"
            android:label="Add Match Data" />
        <activity
            android:name=".MatchHistoryActivity"
            android:label="Match History" />
        <activity
            android:name=".MatchInfoActivity"
            android:label="Match Info" />
        <activity android:name=".TeamStatsActivity"
            android:label="Team Stats"></activity>
    </application>

</manifest>